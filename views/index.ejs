<!DOCTYPE html>
<html lang="en">
<head
>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <div class="container">
          <!-- Page Content goes here -->
          <div class="row">
            <div class="col s12">
              <div class="card">
                <div class="card-content">
                  <span class="card-title">Todo list</span>
                  <div class="row">
                    <form class="col s12" method="post" action="/" onsubmit="return validateForm()">
                      <div class="row">
                        <div class="input-field col s12">
                          <input placeholder="Task" id="task" type="text" name='task'>
                          <label for="task">Insert Task</label>
                          <span class="helper-text" id="error-message" style="color: red; display: none;">Task cannot be empty</span>
                        </div>
                      </div>
                      <input class="btn" type="submit" value="Add task">
                    </form>
                  </div>
                </div>
                <div class="card-action">
                <script>
                  function validateForm() {
                    var taskInput = document.getElementById('task').value;
                    if (taskInput.trim() === "") {
                      document.getElementById('error-message').style.display = 'block';
                      return false;
                    }
                    document.getElementById('error-message').style.display = 'none';
                    return true;
                  }
                </script>

                <ul class="collection">
                  <% tasks.forEach((task) => { %>
                      <li class="collection-item"><%=  task.task %>
                      <a href="delete-task/<%= task.id %>" class="secondary-content"><i class="material-icons">delete</i></a>
                      </li>
                  <% }) %>
                    </ul>
                    <div>
                      <a href="/delete-all-tasks" class="btn">Delete all tasks</a>
                  </div>                  
                </div>
              </div>
            </div>
          </div>
    </div>
</body>
</html>